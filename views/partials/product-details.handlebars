
{{#with products as |product|}}
 <div class="homeButton">
     
   <a href="/"><button class="btn"> <i class="fa fa-home"></i></button></a>
    
 </div>
    <div class="product">
        <img class="productImage" src="/assets/images/{{image}}" />
        <h1 class="productName">{{name}}</h1>
        <div class="productDescription">
            <h1> {{description}}</h1>
        </div>
        <div class="productPrice">
            <h1> Price: ${{price}}.00</h1>
        </div>
        <div class="productLink">
            <h1><a href="{{link}}">Buy Here!</a></h1>
        </div>
        <h1 id="productReviews" class="productReviews">Reviews: {{reviews}}</h1>
    </div>
{{/with}}
