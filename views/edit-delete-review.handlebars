<div class="createReview">
    <h2>Update or Delete your Reviews</h2>
    <form class = "update-review-form">
        <!-- For updating rating/stars. -->
        <label>How Many Stars: </label>
        <input class="search"id = "rating-entry" type = "text" value = "{{rating}}" />

        <!-- For updating review text. -->
        <label>Your review: </label>
        <input class="search"id = "review-entry" type = "text" value = "{{text}}" />
        <div>
            <button class="productLink btn" type = "submit">Update</button>
        </div>
        <div>
            <button class="productLink btn" type = "button" class = "delete-review-btn">Delete</button>
        </div>
    </form>
</div>

<script src = "/js/updateReview.js"></script>
<script src = "/js/deleteReview.js"></script>